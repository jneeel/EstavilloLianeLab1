<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        app:srcCompat="@drawable/arcade" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dapitan Arcade"
        android:textAlignment="center"
        android:textColor="?attr/colorControlActivated"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="37 Dapitan near Dapitan Market, Quezon City, Luzon 1114 Philippines"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.9 km from University of Santo Tomas"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="?attr/colorAccent"
        android:elevation="@android:dimen/app_icon_size"
        android:lineSpacingExtra="8sp"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="?attr/colorAccent"
        android:elevation="@android:dimen/app_icon_size"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="18sp" />
</LinearLayout>